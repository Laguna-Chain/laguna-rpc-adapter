  "license": "MIT",
  "author": "Acala Developers <hello@acala.network>",
  "bin": "./bin/eth-rpc-adapter.js",
  "scripts": {
    "build": "heft build --clean",
    "build:watch": "heft build",
    "watch": "rush build:watch --to @acala-network/eth-rpc-adapter",
    "lint": "tsc --noEmit && eslint \"**/*.ts\"",
    "test": "jest **/__tests__/**/*.js",
    "test:dev": "mocha **/*.test.* --watch --watch-files **/*.test.ts",
    "test:CI": "mocha **/*.test.* --timeout 300000",
    "start": "ts-node src/index",
    "dev": "nodemon --watch \"*\" --ext \"js,ts,json\" --ignore \"src/**/*.{spec,test}.ts\" --exec \"ts-node src/index.ts\" | pino-pretty"
  },
  "dependencies": {
    "@acala-network/eth-providers": "workspace:*",
    "@acala-network/eth-transactions": "workspace:*",
    "@ethersproject/abstract-provider": "~5.5.0",
    "@ethersproject/abstract-signer": "~5.5.0",
    "@ethersproject/address": "~5.5.0",
    "@ethersproject/bignumber": "~5.5.0",
    "@ethersproject/bytes": "~5.5.0",
    "@ethersproject/logger": "~5.5.0",
    "@ethersproject/wallet": "~5.5.0",
    "@polkadot/api": "8.1.1",
    "body-parser": "~1.19.0",
    "connect": "~3.7.0",
    "cors": "~2.8.5",
    "dd-trace": "~2.6.0",
    "ethers": "~5.5.0",
    "jest": "^29.1.2",
    "pino": "~7.0.0-rc.3",
    "ws": "~8.2.2",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@acala-network/contracts": "~4.3.4",
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@ethersproject/contracts": "~5.5.0",
    "@ethersproject/providers": "~5.5.0",
    "@polkadot/types": "8.1.1",
    "@rushstack/eslint-config": "~2.5.4",
    "@rushstack/heft": "~0.44.13",
    "@types/body-parser": "~1.19.1",
    "@types/connect": "~3.4.35",
    "@types/cors": "~2.8.12",
    "@types/mocha": "~9.0.0",
    "@types/node": "~16.10.1",
    "@types/ws": "~8.2.0",
    "@types/yargs": "^16.0.4",
    "babel-jest": "^29.1.2",
    "eslint": "~7.32.0",
    "mocha": "~9.1.3",
    "nodemon": "~2.0.12",
    "pino-pretty": "~7.0.1",
    "ts-node": "~10.7.0",
    "typescript": "~4.6.3"
  },
  "packageManager": "yarn@3.2.3",
  "workspaces": [
    "../eth-transactions",
    "../eth-providers"
  ]
